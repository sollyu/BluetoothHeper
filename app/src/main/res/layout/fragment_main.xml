<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qmui_config_color_background"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/qmuiConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:orientation="vertical"
        android:visibility="visible">

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center"
                android:text="蓝牙未连接" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvReceiveCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@color/fragment_main_statistics_receive_default"
                android:gravity="center"
                android:text="RX 0"
                android:textColor="@android:color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvWriteCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@color/fragment_main_statistics_write_default"
                android:gravity="center"
                android:text="TX 0"
                android:textColor="@android:color/white" />
        </com.qmuiteam.qmui.layout.QMUILinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvReceive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="接收区" />

        </ScrollView>

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.qmuiteam.qmui.layout.QMUILinearLayout
                android:id="@+id/llSendLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cbHex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="HEX" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/fragment_main_message_hit_ascii" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发送" />

            </com.qmuiteam.qmui.layout.QMUILinearLayout>

            <HorizontalScrollView
                android:id="@+id/svShortcutLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible">

                <com.qmuiteam.qmui.layout.QMUILinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.qmuiteam.qmui.layout.QMUIButton
                        android:id="@+id/btnShortcut01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="01"
                        android:text="功能1" />

                    <com.qmuiteam.qmui.layout.QMUIButton
                        android:id="@+id/btnShortcut02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="02"
                        android:text="功能2" />

                    <com.qmuiteam.qmui.layout.QMUIButton
                        android:id="@+id/btnShortcut03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="03"
                        android:text="功能3" />

                    <com.qmuiteam.qmui.layout.QMUIButton
                        android:id="@+id/btnShortcut04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="04"
                        android:text="功能4" />

                    <com.qmuiteam.qmui.layout.QMUIButton
                        android:id="@+id/btnShortcut05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="05"
                        android:text="功能5" />

                </com.qmuiteam.qmui.layout.QMUILinearLayout>
            </HorizontalScrollView>
        </com.qmuiteam.qmui.layout.QMUILinearLayout>
    </LinearLayout>

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/qmuiTopBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        tools:layout_height="?attr/qmui_topbar_height" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>